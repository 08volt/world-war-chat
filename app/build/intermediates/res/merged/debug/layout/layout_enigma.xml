<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/plainedittext"
        />s

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="2dp">
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chiavi: "
                android:id="@+id/textView1" />

            <EditText android:layout_gravity="left"
                android:id="@+id/chiavi1"
                android:layout_width="match_parent"
                android:autoText="false"
                android:inputType="textCapCharacters"
                android:text="AAA"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotori: "
                android:id="@+id/textView3" />

            <EditText
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:autoText="false"
                android:inputType="numberDecimal"
                android:text="123"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:id="@+id/rotori1" />

        </TableRow>



    </TableLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quali coppie vuoi connettere?"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textCapCharacters|textNoSuggestions"
        android:text="PO ML IU KJ"
        android:id="@+id/plugboard1"/>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENIGMA"
        android:id="@+id/button" />

    <TextView
        android:id="@+id/criptext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />






</LinearLayout>
